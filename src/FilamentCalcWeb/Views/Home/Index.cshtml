@model CalculatorViewModel
@{
    ViewData["Title"] = "Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Filamenttypes)
                @Html.DropDownListFor(o => o.Filamenttypes,
                    new SelectList(Model.Filamenttypes, nameof(FilamentType.FilamentTypeId), nameof(FilamentType.Name)),new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Filaments)
                @Html.DropDownListFor(o => o.Filaments,
                    new SelectList(Model.Filaments, nameof(Filament.FilamentTypeId), nameof(Filament.Displayname)), new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.weight)
                @Html.TextBoxFor(model => model.weight,new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.lengthmm)
                @Html.TextBoxFor(model => model.lengthmm,new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.printtimeh)
                @Html.TextBoxFor(model => model.printtimeh,new { @class = "form-control" })
            </div>


            <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Berechnen</button>
        </div>
            }
        </div>
