@model IEnumerable<Shipment>

    @{
    ViewData["Title"] = "Shipment";
    }

    <p>
        <a asp-area="" asp-controller=@nameof(Shipment) asp-action="Edit" class="btn btn-outline-success my-2 my-sm-0">Add Shipment</a>
    </p>

    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipmentOrg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipmentOrg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShipmentID" class="btn btn-outline-info btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ShipmentID" class="btn btn-outline-danger btn-sm">Delete</a>
                @*@Html.ActionLink("Delete", "Delete", new {id = item.ShipmentID})*@
            </td>
        </tr>
        }
    </table>