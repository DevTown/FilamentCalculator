@model FilamentCalculator.ViewModels.FilamentTypeViewModel

@{
    ViewData["Title"] = "Delete Filament Type";
}

<h3>Are you sure you want to delete this filament type?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @if (!Model.IsInUse)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="FilamentTypeId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to list</a>
        </form>
    }
    else
    {
        <div class="alert alert-danger">
            This filament type cannot be deleted because it is still used by filaments.
        </div>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    }
</div>
}